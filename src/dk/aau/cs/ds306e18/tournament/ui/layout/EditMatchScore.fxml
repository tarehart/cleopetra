<AnchorPane id="exitPopup" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseDragged="#windowDragged" onMousePressed="#windowPressed" stylesheets="@css/stylesheet.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="dk.aau.cs.ds306e18.tournament.ui.EditMatchScoreController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button mnemonicParsing="false" onAction="#onCancelBtnPressed" styleClass="cancelBtn" text="X">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
            <GridPane alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="blueTeamNameLabel" alignment="CENTER" minWidth="160.0" prefWidth="160.0" text="Blue" textFill="#6a82fc">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="orangeTeamNameLabel" alignment="CENTER" minWidth="160.0" prefWidth="160.0" text="Orange" textFill="#f5af18" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="blueScoreSpinner" editable="true" minWidth="70.0" prefWidth="70.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                  <Spinner fx:id="orangeScoreSpinner" editable="true" minWidth="70.0" prefWidth="70.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
               </children>
               <VBox.margin>
                  <Insets bottom="16.0" />
               </VBox.margin>
            </GridPane>
            <CheckBox fx:id="matchOverCheckBox" mnemonicParsing="false" text="Match is over">
               <VBox.margin>
                  <Insets bottom="32.0" />
               </VBox.margin>
            </CheckBox>
            <HBox>
               <children>
                  <Button disable="true" mnemonicParsing="false" onAction="#FetchBtnPressed" text="Fetch from RL" />
                  <Pane minWidth="90.0" HBox.hgrow="ALWAYS" />
                  <Button minWidth="65.0" mnemonicParsing="false" onAction="#onSaveBtnPressed" text="Save" fx:id="saveButton">
                     <HBox.margin>
                        <Insets right="8.0" />
                     </HBox.margin>
                  </Button>
                  <Button minWidth="65.0" mnemonicParsing="false" onAction="#onCancelBtnPressed" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
